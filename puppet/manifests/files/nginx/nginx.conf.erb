server {
  listen   80;

  server_name <%= @domain_name %>;

  location / {
    uwsgi_pass unix:/run/uwsgi/<%= @project %>.sock;
    include uwsgi_params;
  }

  location /static/ {
    alias <%= @public_html_path %>/<%= @domain_name %>/static/;
  }

  location /media/ {
    alias <%= @public_html_path %>/<%= @domain_name %>/media/;
  }
}
