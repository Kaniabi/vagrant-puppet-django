[uwsgi]
# Define variables
project = %n
base_dir = <%= @code_path %>/%(project)

# Config
uid = <%= @uwsgi_user %>
gid = <%= @uwsgi_group %>

socket = /run/uwsgi/%(project).sock
master = true
no-orphans = true

chdir = %(base_dir)
module = %(project).wsgi:application
virtualenv = <%= @virtualenvs_path %>/%(project)

logto = <%= @logs_path %>/%(project).log
